@using System.Web.Mvc.Html;
@using Thinkage.MainBoss.WebAccess;
@using Thinkage.Web.Mvc.Html;

@{
	var instance = (Thinkage.MainBoss.WebAccess.MainBossWebAccessApplication)Thinkage.Libraries.Application.Instance;
	if (instance != null && !instance.IsLoggedOut && instance.IsMainBossUser) {
		<div class="UserIdRow">
			<div class="UserId">
				@(T.Text("Welcome MainBoss user"))@Html.NBSP()<b>@(instance.ContactName) <span style="display:inline-block">(@(instance.UserName) @(T.Text("on")) @(instance.Connection.DBClientConnection.DBName))</span></b>
			</div>
			<div class="logout">
				@Html.ActionLink(T.Text("Logout"), "Logout", "Home", null, new {@class = "StateActionLink"})
			</div>
			<br />
		</div>
	}
}

